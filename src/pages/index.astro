---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const allPosts = await getCollection('blog', ({ data }) => {
  return import.meta.env.PROD ? data.draft !== true : true;
});

const recentPosts = allPosts
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 5);

function formatDate(date: Date): string {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'short',
    day: 'numeric',
  });
}
---

<BaseLayout title="Marco Bertolino" description="Lead Cloud/Cybersecurity Engineer">
  <section style="margin-bottom: 4rem;">
    <h1 style="font-size: 2.5rem; margin-bottom: 0.5rem; letter-spacing: -0.025em;">Marco Bertolino</h1>
    <p style="font-size: 1.25rem; color: var(--color-text-muted); margin-bottom: 1.5rem;">
      Lead Cloud/Cybersecurity Engineer
    </p>
    <p style="color: var(--color-text); max-width: 50ch;">
      Welcome to my personal blog. I write about cloud architecture, Kubernetes, cybersecurity, and my journey in tech.
    </p>
  </section>

  <section>
    <div style="display: flex; justify-content: space-between; align-items: baseline; margin-bottom: 1.5rem;">
      <h2 style="font-size: 1.5rem;">Recent Posts</h2>
      <a href="/blog" style="font-size: 0.875rem;">View all posts â†’</a>
    </div>
    
    {recentPosts.length === 0 ? (
      <p style="color: var(--color-text-muted);">No posts yet.</p>
    ) : (
      <ul style="list-style: none;">
        {recentPosts.map((post) => (
          <li style="margin-bottom: 2rem;">
            <a href={`/blog/${post.slug}`} style="font-size: 1.25rem; font-weight: 600; display: block; margin-bottom: 0.25rem;">
              {post.data.title}
            </a>
            <div style="color: var(--color-text-muted); font-size: 0.875rem; margin-bottom: 0.5rem;">
              <time datetime={post.data.pubDate.toISOString()}>{formatDate(post.data.pubDate)}</time>
            </div>
            <p style="color: var(--color-text-muted);">
              {post.data.description}
            </p>
          </li>
        ))}
      </ul>
    )}
  </section>
</BaseLayout>
